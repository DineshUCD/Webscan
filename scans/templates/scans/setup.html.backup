{% load bootstrap3 %}
<html>
<body>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript" ></script>
<script src="http://www.appelsiini.net/projects/jeditable/jquery.jeditable.js" ></script>
<form method="POST" action="">
    {% csrf_token %}
    {% bootstrap_form form %}
    {% buttons %}
        <button type="submit" class="btn btn-primary">
            {% bootstrap_icon "star" %} Submit
        </button>
    {% endbuttons %}
</form>
<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created</th>
    </tr>
{% for plan in plans %}
    <tr>
        {% ifchanged %}
        <td>{{ plan.name }}</td> 
        <td>{{ plan.description }}</td>
        <td>{{ plan.created }}</td>
        {% endifchanged %}
        <td>
            <form method="POST" action="{% url 'scans:delete' plan.id %}">
	        {% csrf_token %}
                <input type="submit" name="delete" value="Delete Item">
	    </form>
        </td>
        <td><a class="btn btn-primary" href="{% url 'scans:edit' plan.pk %}">Edit Item</a></td>
        
        <td>
            <form method="POST" action="{% url 'scans:add_scan' plan.pk %}">
                {% csrf_token %}
                <input type="submit" name="add_scan" value="Add to Scan List">
                <input type="submit" name="unadd_scan" value="Remove from Scan List">
            </form>
        </td>
    <tr>
{% endfor %}
</body>
</html>
